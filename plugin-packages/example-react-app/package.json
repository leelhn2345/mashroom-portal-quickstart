{
    "name": "example-react-app",
    "description": "Example react app that can be used in the Mashroom Portal",
    "license": "MIT",
    "version": "1.0.0",
    "devDependencies": {
        "@babel/cli": "^7.6.2",
        "@babel/polyfill": "^7.6.0",
        "eslint": "^6.4.0",
        "jest": "^24.9.0",
        "react": "^16.10.1",
        "react-dom": "^16.10.1",
        "webpack": "^4.41.0",
        "babel-loader": "^8.0.6",
        "eslint-loader": "^3.0.2",
        "css-loader": "^3.2.0",
        "file-loader": "^4.2.0",
        "sass-loader": "^8.0.0",
        "node-sass": "^4.12.0",
        "style-loader": "^1.0.0",
        "webpack-cli": "^3.3.9",
        "webpack-dev-server": "^3.8.1",
        "selenium-webdriver": "^3.6.0",
        "chromedriver": "^77.0.0"
    },
    "scripts": {
        "lint": "eslint src",
        "flow": "flow check",
        "dev": "webpack-dev-server --hot --mode development",
        "build": "webpack --mode production --display-error-details",
        "test": "jest --testPathPattern=test/ --passWithNoTests",
        "test-e2e": "jest --testPathPattern=test-e2e/"
    },
    "jest": {
        "verbose": true,
        "roots": [
            "<rootDir>/test",
            "<rootDir>/test-e2e"
        ],
        "testRegex": "test\\.js$"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Example React App",
                "title": {
                    "en": "Example React App",
                    "de": "Beispiel React App"
                },
                "category": "Examples",
                "type": "portal-app",
                "bootstrap": "startExampleReactApp",
                "resources": {
                    "js": [
                        "bundle.js"
                    ],
                    "css": []
                },
                "defaultConfig": {
                    "resourcesRoot": "./dist",
                    "restProxies": {},
                    "rolePermissions": {
                        "edit": [
                            "RoleMyAppEdit",
                            "Administrator"
                        ],
                        "doEverything": [
                            "Administrator"
                        ]
                    },
                    "appConfig": {
                        "name": "World"
                    }
                }
            }
        ]
    }
}
