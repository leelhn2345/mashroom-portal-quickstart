{
    "name": "example-react-app",
    "description": "Example react app that can be used in the Mashroom Portal",
    "license": "MIT",
    "version": "1.0.0",
    "devDependencies": {
        "@babel/cli": "^7.11.6",
        "eslint": "^7.10.0",
        "jest": "^26.4.2",
        "react": "^16.13.1",
        "react-dom": "^16.13.1",
        "webpack": "^4.44.2",
        "babel-loader": "^8.1.0",
        "eslint-loader": "^4.0.2",
        "css-loader": "^4.3.0",
        "file-loader": "^6.1.0",
        "sass-loader": "^10.0.2",
        "node-sass": "^4.14.1",
        "style-loader": "^1.3.0",
        "webpack-cli": "^3.3.12",
        "webpack-dev-server": "^3.11.0",
        "@testing-library/jest-dom": "^5.10.1",
        "@testing-library/react": "^10.3.0",
        "typescript": "^4.0.3",
        "@types/react": "^16.9.50",
        "@types/react-dom": "^16.9.8",
        "@types/selenium-webdriver": "^4.0.9",
        "selenium-webdriver": "^4.0.0-alpha.7",
        "chromedriver": "^83.0.0"
    },
    "scripts": {
        "lint": "eslint --fix src test",
        "type-check": "tsc --noEmit",
        "dev": "webpack-dev-server --hot --mode development",
        "build": "webpack --mode production --display-error-details",
        "test": "jest --testPathPattern=test/ --passWithNoTests",
        "test-e2e": "jest --testPathPattern=test-e2e/"
    },
    "jest": {
        "verbose": true,
        "roots": [
            "<rootDir>/test",
            "<rootDir>/test-e2e"
        ],
        "transform": {
            "^.+\\.tsx?$": "babel-jest"
        },
        "setupFilesAfterEnv": [
            "./setupTests.js",
            "@testing-library/jest-dom/extend-expect"
        ]
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Example React App",
                "title": {
                    "en": "Example React App",
                    "de": "Beispiel React App"
                },
                "category": "Examples",
                "type": "portal-app",
                "bootstrap": "startExampleReactApp",
                "resources": {
                    "js": [
                        "bundle.js"
                    ],
                    "css": []
                },
                "defaultConfig": {
                    "resourcesRoot": "./dist",
                    "restProxies": {},
                    "rolePermissions": {
                        "edit": [
                            "RoleMyAppEdit",
                            "Administrator"
                        ],
                        "doEverything": [
                            "Administrator"
                        ]
                    },
                    "appConfig": {
                        "name": "World"
                    }
                }
            }
        ]
    }
}
