{
    "name": "example-react-app",
    "description": "Example react app that can be used in the Mashroom Portal",
    "license": "MIT",
    "version": "1.0.0",
    "devDependencies": {
        "@babel/cli": "^7.15.7",
        "eslint": "^7.32.0",
        "jest": "^27.3.0",
        "react": "^17.0.2",
        "react-dom": "^17.0.2",
        "webpack": "^5.58.2",
        "babel-loader": "^8.2.2",
        "eslint-webpack-plugin": "^3.0.1",
        "css-loader": "^6.4.0",
        "file-loader": "^6.2.0",
        "sass-loader": "^12.2.0",
        "node-sass": "^6.0.1",
        "style-loader": "^3.3.0",
        "webpack-cli": "^4.9.1",
        "webpack-dev-server": "^4.3.1",
        "@testing-library/jest-dom": "^5.14.1",
        "@testing-library/react": "^12.1.2",
        "typescript": "^4.4.4",
        "@types/react": "^17.0.30",
        "@types/react-dom": "^17.0.9",
        "@types/selenium-webdriver": "^4.0.15",
        "selenium-webdriver": "^4.0.0",
        "chromedriver": "^94.0.0"
    },
    "scripts": {
        "lint": "eslint --fix src test",
        "type-check": "tsc --noEmit",
        "dev": "webpack serve --hot --mode development",
        "build": "webpack --mode production",
        "test": "jest --testPathPattern=test/ --passWithNoTests",
        "test-e2e": "jest --testPathPattern=test-e2e/"
    },
    "jest": {
        "verbose": true,
        "roots": [
            "<rootDir>/test",
            "<rootDir>/test-e2e"
        ],
        "transform": {
            "^.+\\.tsx?$": "babel-jest"
        },
        "setupFilesAfterEnv": [
            "./setupTests.js",
            "@testing-library/jest-dom/extend-expect"
        ],
        "testEnvironment": "jsdom"
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Example React App",
                "title": {
                    "en": "Example React App",
                    "de": "Beispiel React App"
                },
                "category": "Examples",
                "type": "portal-app",
                "bootstrap": "startExampleReactApp",
                "resources": {
                    "js": [
                        "bundle.js"
                    ],
                    "css": []
                },
                "defaultConfig": {
                    "resourcesRoot": "./dist",
                    "restProxies": {},
                    "rolePermissions": {
                        "edit": [
                            "RoleMyAppEdit",
                            "Administrator"
                        ],
                        "doEverything": [
                            "Administrator"
                        ]
                    },
                    "appConfig": {
                        "name": "World"
                    }
                }
            }
        ]
    }
}
