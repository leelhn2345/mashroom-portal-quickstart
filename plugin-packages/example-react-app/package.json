{
    "name": "example-react-app",
    "description": "Example react app that can be used in the Mashroom Portal",
    "license": "MIT",
    "version": "1.0.0",
    "devDependencies": {
        "@babel/cli": "^7.12.1",
        "eslint": "^7.13.0",
        "jest": "^26.6.3",
        "react": "^17.0.1",
        "react-dom": "^17.0.1",
        "webpack": "^4.44.2",
        "babel-loader": "^8.2.1",
        "eslint-loader": "^4.0.2",
        "css-loader": "^5.0.1",
        "file-loader": "^6.2.0",
        "sass-loader": "^10.1.0",
        "node-sass": "^5.0.0",
        "style-loader": "^2.0.0",
        "webpack-cli": "^4.2.0",
        "webpack-dev-server": "^3.11.0",
        "@testing-library/jest-dom": "^5.11.5",
        "@testing-library/react": "^11.1.2",
        "typescript": "^4.0.5",
        "@types/react": "^16.9.56",
        "@types/react-dom": "^16.9.9",
        "@types/selenium-webdriver": "^4.0.10",
        "selenium-webdriver": "^4.0.0-alpha.7",
        "chromedriver": "^86.0.0"
    },
    "scripts": {
        "lint": "eslint --fix src test",
        "type-check": "tsc --noEmit",
        "dev": "webpack serve --hot --mode development",
        "build": "webpack --mode production",
        "test": "jest --testPathPattern=test/ --passWithNoTests",
        "test-e2e": "jest --testPathPattern=test-e2e/"
    },
    "jest": {
        "verbose": true,
        "roots": [
            "<rootDir>/test",
            "<rootDir>/test-e2e"
        ],
        "transform": {
            "^.+\\.tsx?$": "babel-jest"
        },
        "setupFilesAfterEnv": [
            "./setupTests.js",
            "@testing-library/jest-dom/extend-expect"
        ]
    },
    "mashroom": {
        "devModeBuildScript": "build",
        "plugins": [
            {
                "name": "Example React App",
                "title": {
                    "en": "Example React App",
                    "de": "Beispiel React App"
                },
                "category": "Examples",
                "type": "portal-app",
                "bootstrap": "startExampleReactApp",
                "resources": {
                    "js": [
                        "bundle.js"
                    ],
                    "css": []
                },
                "defaultConfig": {
                    "resourcesRoot": "./dist",
                    "restProxies": {},
                    "rolePermissions": {
                        "edit": [
                            "RoleMyAppEdit",
                            "Administrator"
                        ],
                        "doEverything": [
                            "Administrator"
                        ]
                    },
                    "appConfig": {
                        "name": "World"
                    }
                }
            }
        ]
    }
}
