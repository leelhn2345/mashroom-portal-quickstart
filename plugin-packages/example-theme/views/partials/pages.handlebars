<ul class="nav flex-column">
    {{#each this}}
        {{#unless hidden}}
            <li class="nav-item">
                {{#equals pageId @root.page.pageId}}
                    <a class="nav-link active" href="">{{title}}</a>
                {{else}}
                    <a class="nav-link" href="{{@root.siteBasePath}}{{friendlyUrl}}">{{title}}</a>
                {{/equals}}
                {{#if subPages}}
                    {{> pages subPages}}
                {{/if}}
            </li>
        {{/unless}}
    {{/each}}
</ul>
